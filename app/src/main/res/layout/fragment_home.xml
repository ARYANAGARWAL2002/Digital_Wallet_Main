<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/background_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- User Greeting -->
        <TextView
            android:id="@+id/tv_user_greeting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hello, User!"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/primary_text"
            android:layout_marginBottom="16dp" />

        <!-- Categories Label -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Categories"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/primary_text"
            android:layout_marginBottom="8dp" />

        <!-- Horizontal Categories RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/categories_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal"
            android:overScrollMode="never"
            android:clipToPadding="false"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

        <!-- Recent Cards Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recent Cards"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/primary_text"
            android:layout_marginBottom="8dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recent_cards_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="150dp"
            android:clipToPadding="false"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:orientation="horizontal" />

        <TextView
            android:id="@+id/tv_no_recent_cards"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No recent cards"
            android:textColor="@color/secondary_text"
            android:gravity="center"
            android:padding="16dp"
            android:visibility="gone" />

        <!-- Expiring Cards Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Expiring Soon"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/primary_text"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/expiring_cards_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="150dp"
            android:clipToPadding="false"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:orientation="horizontal" />

        <TextView
            android:id="@+id/tv_no_expiring_cards"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No cards expiring soon"
            android:textColor="@color/secondary_text"
            android:gravity="center"
            android:padding="16dp"
            android:visibility="gone" />

    </LinearLayout>
</ScrollView>
